<%= form_tag '/participants', method: :post do %>
  <div class="form-group">
    Select Visior to add them: <%= collection_select :visitor, :visitor_id, Visitor.all, :id, :name, {}, class: "form-control" %>
  </div>
  <div class="form-group">
    Select Event: <%= collection_select :event, :event_id, Event.all, :id, :name, {}, class: "form-control" %>
